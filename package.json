{
    "name": "kaizen-backend",
    "version": "1.0.0",
    "description": "Backend server for Kaizen - a Japanese inspired task management web app for humans.",
    "main": "server.js",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prisma:fmt": "yarn prisma format",
        "prisma:mgr": "yarn prisma migrate dev --name init",
        "clean": "rm -rf build tsconfig.tsbuildinfo",
        "build": "tsc && tsc-alias",
        "start:prod": "yarn build && node --experimental-specifier-resolution=node build/server.js",
        "start:dev": "nodemon"
    },
    "repository": {
        "type": "git",
        "url": "github.com/dev-xero/kaizen-backend"
    },
    "keywords": [
        "kaizen",
        "backend",
        "task-management"
    ],
    "author": "dev-xero",
    "license": "GPL-3.0",
    "devDependencies": {
        "@types/express": "^5.0.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "app-root-path": "^3.1.0",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "nodemon": "^3.1.7",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.17.0"
    }
}
